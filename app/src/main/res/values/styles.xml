    <!--        <item name="cornerSizeTopRight">@dimen/_30sdp</item>-->
    <!--        <item name="cornerSizeBottomLeft">@dimen/_30sdp</item>-->
    <!--        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>-->
    <!--    </style>-->

    <style name="ImageShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCorners7sdp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_7sdp</item>
    </style>

    <style name="customRoundedImageViewGallery" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">@dimen/_18sdp</item>
    </style>

    <style name="ExoMediaButton" parent="">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:background">@drawable/ic_play_circle</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:src">@drawable/ic_previous</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:src">@drawable/ic_forword</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:src">@drawable/ic_rewind</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:src">@drawable/ic_fast_forward</item>
    </style>

    <style name="ExoMediaButton.RepeatOff">
        <item name="android:src">@drawable/ic_repeat</item>
    </style>

    <style name="ExoMediaButton.RepeatOne">
        <item name="android:src">@drawable/ic_repeat_one</item>
    </style>

    <style name="ExoMediaButton.RepeatAll">
        <item name="android:src">@drawable/ic_repeat_all</item>
    </style>

    <style name="ExoMediaButton.ShuffleOff">
        <item name="android:src">@drawable/ic_suffle</item>
    </style>

    <style name="ExoMediaButton.ShuffleOn">
        <item name="android:src">@drawable/shuffle_off</item>
    </style>

    <style name="ExoMediaButton.VR">
        <item name="android:src">@drawable/ic_vr</item>
    </style>

</resources>